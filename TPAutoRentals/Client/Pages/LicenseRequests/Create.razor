@page "/licenserequests/create"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New LicenseRequest</h3>
<hr />
<br />

<FormComponent ButtonText="Create LicenseRequest" licenserequest="licenserequest" OnValidSubmit="@CreateLicenseRequest" />

@code {
    LicenseRequest licenserequest = new LicenseRequest();

    private async Task CreateLicenseRequest()
    {
        await _client.PostAsJsonAsync(Endpoints.LicenseRequestsEndpoint, licenserequest);
        _navManager.NavigateTo("/licenserequests/");
    }
}
